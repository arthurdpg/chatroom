@model ChatRoomViewModel
@{
    ViewData["Title"] = "Chat Room";
}
@section css {
    <link rel="stylesheet" href="~/css/chat.css" />
}
    <main class="content">
        @Html.HiddenFor(model => model.Id, htmlAttributes: new {id="hdnRoomId"})
        @Html.Hidden("hdnUserId", userManager.GetUserId(User))
        @Html.Hidden("hdnUserName", userManager.GetUserName(User))
        <div class="container p-0">

            <h1 class="h3 mb-3">Messages</h1>

            <div class="card">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="position-relative">
                            <div class="chat-messages p-4" id="chat-messages">
                            </div>
                        </div>

                        <div class="flex-grow-0 py-3 px-4 border-top">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Type your message" maxlength="280" id="txtContent" />
                                <button class="btn btn-primary" id="btnPost" disabled="disabled">Post</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
    @section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
}