@model ChatRoomDetailsViewModel
@{
    ViewData["Title"] = "Chat Room";
}
@section css {
    <link rel="stylesheet" href="~/css/chat.css" />
}
    <main class="content">
        @Html.HiddenFor(model => model.Id, htmlAttributes: new {id="hdnRoomId"})
        <div class="container p-0">

            <h1 class="h3 mb-3">Messages</h1>

            <div class="card">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="position-relative">
                            <div class="chat-messages p-4">
                                @if (!Model.PostsNotFound)
                            {
                                foreach (var post in Model.Posts)
                                {
                                    if (post.UserId == userManager.GetUserId(User))
                                    {
                                        <div class="chat-message-right pb-4">
                                            <div>
                                                <img src="~/images/avatar.png" class="rounded-circle mr-1" alt="Chris Wood" width="40" height="40">
                                                <div class="text-muted small text-nowrap mt-2">@post.Created.ToString("HH:mm")</div>
                                            </div>
                                            <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
                                                <div class="font-weight-bold mb-1">You</div>
                                                @post.Content
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="chat-message-left pb-4">
                                            <div>
                                                <img src="~/images/avatar.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
                                                <div class="text-muted small text-nowrap mt-2">@post.Created.ToString("HH:mm")</div>
                                            </div>
                                            <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
                                                <div class="font-weight-bold mb-1">@post.UserName</div>
                                                @post.Content
                                            </div>
                                        </div>
                                    }
                                }
                            }

                        </div>
                    </div>

                    <div class="flex-grow-0 py-3 px-4 border-top">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type your message" maxlength="280" id="txtContent" />
                            <button class="btn btn-primary" id="btnPost">Post</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
}