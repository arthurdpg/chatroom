@model ChatRoomsViewModel
@{
    ViewData["Title"] = "Chat Rooms";
}
@Html.Hidden("hdnUserId", userManager.GetUserId(User))
<div class="text-center">
    <h1 class="display-4">Welcome to the chat rooms</h1>
    <p>@Html.ActionLink("Create a new room", "Create", "Chat")</p>
    <div class="row">
        @if (!Model.RoomsNotFound)
        {
            for (int i = 0; i < Model.Rooms.Count; i++)
            {
                if (i > 0 && i % 3 == 0)
                {
                    <div class="w-100"></div>
                }
                <div class="col-4" style="margin-top: 10px">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Rooms[i].Name</h5>
                            <p class="card-text">@Model.Rooms[i].Description</p>
                            @Html.ActionLink("Let's chat", "Details", "Chat", new {id = Model.Rooms[i].Id.ToString()} , htmlAttributes: new { @class = "btn btn-primary btn-join", @data_roomid=Model.Rooms[i].ToString() })
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
}